{
  "include": [
    "lib/**/*.js"
  ],
  "exclude": [
    "**/*.config.js",
    "test/**"
  ],
  "compilerOptions": {
    "rootDir": "lib",
    "target": "ES2015",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true
  }
}
